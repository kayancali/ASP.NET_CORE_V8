@page "{id}"
@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="container">
    <form method="post">
        <input type="hidden" asp-for="Employee.Id">
        
        <div class="mb-3 row">
            <label asp-for="Employee.Name" class="col-sm-2 col-form-label fw-bold">Name</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Employee.Name" placeholder="Enter name">
                <span asp-validation-for="Employee.Name" class="text-danger"></span>
            </div>
        </div>
        
        <div class="mb-3 row">
            <label asp-for="Employee.Email" class="col-sm-2 col-form-label fw-bold">Email</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Employee.Email" placeholder="Enter email">
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>
        </div>
        
        <div class="mb-3 row">
            <label asp-for="Employee.Photo" class="col-sm-2 col-form-label fw-bold">Photo</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Employee.Photo" placeholder="Enter photo URL">
                <span asp-validation-for="Employee.Photo" class="text-danger"></span>
            </div>
        </div>
        
        <div class="mb-3 row">
            <label asp-for="Employee.Deparment" class="col-sm-2 col-form-label fw-bold">Department</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Employee.Deparment" placeholder="Enter department">
                <span asp-validation-for="Employee.Deparment" class="text-danger"></span>
            </div>
        </div>
        
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary me-2">Update</button>
            <a href="/Employees/Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
