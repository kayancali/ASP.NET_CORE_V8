@model MeetingInfo

@{
    ViewBag.Title = "Toplantı Başvuru";
    Layout = "_Layout2";
}

<main class="text-center">


    
    
    <h1 class="h4"> @ViewData["selamlama"],@ViewData["UserName"] @ViewData["unvan"]</h1>
    <p>Toplantıya katılım sağlayacak mısınız</p>
    
    <div class="card my-2">
        <ul class="list-group list-group-flush">
            <li class="list-group-item"> @Model.Location</li>
            <li class="list-group-item"> @Model.Date.ToString("dd,MM,yyyy HH:mm:ss") Tarihinde gerçekleşecektir</li>
            <li class="list-group-item"> @ViewBag.UserCount Katılımcı</li>
        </ul>
    </div>
    
    <a class="btn btn-sm btn-outline-primary " asp-controller ="Meeting" asp-action="Apply">Başvuru Yap</a>
</main>